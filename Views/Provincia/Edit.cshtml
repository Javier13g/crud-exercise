@model crud.Models.Provincium

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container2">
    <h1>Edit</h1>
    <h4>Provincia</h4>
    <a asp-action="Index">Back to List</a>
</div>
<form class="form-registrer" asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div>
        <input asp-for="Nombre" class="controls" type="text" name="Nombre" placeholder="Ingresar nombre">
    </div>
    <div>
        <textarea asp-for="Descripcion" class="controls" placeholder="Ingrese descripcion"></textarea>
    </div>
    <div class="form-group form-check">
        <input class="form-check-input" asp-for="Estado" /> @Html.DisplayNameFor(model => model.Estado)
    </div>
    <div class="form-group">
        <label asp-for="FechaCreacion" class="control-label"></label>
        <input asp-for="FechaCreacion" class="form-control" />
        <span asp-validation-for="FechaCreacion" class="text-danger"></span>
    </div>
    <br>
    <input type="submit" value="Save" class="botons" />
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
