@model crud.Models.Ocupacion

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container2">
    <h1>Create</h1>
    <h4>Ocupacion</h4>
    <a asp-action="Index">Back to List</a>
</div>
<form class="form-registrer" asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div>
        <input asp-for="Nombre" class="controls" type="text" name="Nombre" placeholder="Ingresar nombre">
    </div>
    <div>
        <textarea asp-for="Descripcion" class="controls" placeholder="Ingrese descripcion"></textarea>
    </div>
    <div class="form-group form-check">
        <input class="form-check-input" asp-for="Estado" /> @Html.DisplayNameFor(model => model.Estado)
    </div>
    <br>
    <input type="submit" value="Create" class="botons" />
</form>


@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
